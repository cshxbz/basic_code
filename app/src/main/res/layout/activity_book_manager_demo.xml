<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <Button
            android:id="@+id/btn_bind_book_manager_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="连接到Book_Manager_Service"
            android:layout_marginBottom="20dp"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_add_book"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="add_book"
                />

            <EditText
                android:id="@+id/et_book_name"
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:hint="input book name"
                android:gravity="center"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btn_get_book_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="get_book_list"
            />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>